<configuration>
    <connectionStrings>
        <add name="connstr" connectionString="data source=;initial catalog=;integrated security=false;persist security info=True;User ID=;Password=;Application Name=group" providerName="System.Data.SqlClient"/>
    </connectionStrings>
    <system.web>
        <compilation debug="true" targetFramework="4.0" />
    </system.web>
    <appSettings>
        <!--邮件发送设置：
        MailSendMode        = 邮件发送模式(0=测试/1=正式)
        MailServer          = 邮件发送服务器
        MailPort            = 邮件发送端口
        MailFromUser        = 邮件发送帐号(带后缀，邮件发送用)
        MailFromName        = 邮件发送名称(显示的别名)
        MailLoginName       = 邮件发送帐号(登陆用邮件服务器)
        MailLoginPWD        = 邮件发送帐号密码(登陆用邮件服务器)
        IsSendMail          = 是否发送邮件(true=发送/false=不发送)
        -->
        <add key="MailSendMode" value="1" />
        <add key="MailServer" value="smtp.126.com" />
        <add key="MailPort" value="25"></add>
        <add key="MailFromUser" value="" />
        <add key="MailFromName" value=""/>
        <add key="MailLoginName" value="" />
        <add key="MailLoginPWD" value="" />
        <add key="IsSendMail" value="true"></add>
    </appSettings>

</configuration>
